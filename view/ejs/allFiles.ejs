<body>

  	  <div class="d-flex flex-column bd-highlight mb-3 task-box">

		  <h2>List of Uploaded Files</h2>
		  
		  <a href="/tasks">
		  	<span class="fa fa-angle-double-left back"></span>
		  </a>

		  <ul class="task-list">
			<% myFiles.forEach(details => { %>
			<li class="task-list-item">
				<div class="task-list-item-name">
					<a href="/upload/files/<%= details._id %>" class="href"><%= details.filename%></a><br/>
				</div>

				<a href="/delete/file/<%= details._id %>" class="href">
					<span class="fas fa-trash-alt"></span>
				</a>
			</li>
			<% }) %>
		</ul>
	</div>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
